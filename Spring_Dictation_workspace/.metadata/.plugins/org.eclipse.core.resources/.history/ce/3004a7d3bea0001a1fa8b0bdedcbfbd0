<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dictation.mapper.Term_cdMapper"> 
	
	<!-- Insert a term_cd -->
	<insert id="insert" parameterType="com.dictation.vo.Term_cdVO">
		insert into term_cd(
			year,
			term,
			manage_st_dt,
			manage_ed_dt,
			enroll_st_dt,
			enroll_ed_dt,
			use_yn,
			bigo,
			input_id,
			input_date,
			update_id,
			update_date
			
		) values(
			#{year},
			#{term},
			#{manage_st_dt},
			#{manage_ed_dt},
			#{enroll_st_dt},
			#{enroll_ed_dt},
			#{use_yn},
			#{bigo},
			#{input_id},
			#{input_date},
			#{update_id},
			#{update_date}
		)
	</insert>
 
 
 
 
	<!-- according to id Delete students -->
	<delete id="delete" parameterType="String">
		delete from term_cd where year=#{year} and term=#{term}
	</delete>
 
	<!-- according to id Modifying Student Information-->
	<update id="update" parameterType="Term_cdVO">
		update term_cd
		set
			year=#{year},
			term=#{term},
			manage_st_dt=#{manage_st_dt},
			manage_ed_dt=#{manage_ed_dt},
			enroll_st_dt=#{enroll_st_dt},
			enroll_ed_dt=#{enroll_ed_dt},
			use_yn=#{use_yn},
			bigo=#{bigo},
			input_id=#{input_id},
			input_date=#{input_date},
			update_id=#{update_id},
			update_date=#{update_date}
			
		where
			year=#{year} and term=#{term}
	</update>
	
	
 
	<!-- according to id query -->
	<select id="getById" parameterType="String" resultType="Term_cdVO">
		select
			year,
			term,
			manage_st_dt,
			manage_ed_dt,
			enroll_st_dt,
			enroll_ed_dt,
			use_yn,
			bigo,
			input_id,
			input_date,
			update_id,
			update_date
		from
			term_cd
		where
			year=#{year} and term=#{term}
	</select>
	
	
 
	<!-- Query all -->
	<select id="list" parameterType="int" resultType="com.dictation.vo.Term_cdVO">
		select
			year,
			term,
			manage_st_dt,
			manage_ed_dt,
			enroll_st_dt,
			enroll_ed_dt,
			use_yn,
			bigo,
			input_id,
			input_date,
			update_id,
			update_date
		from
			term_cd
	</select> 
	
	
	<!-- term_cd테이블에서 use_yn값이 1인 데이터의 year, term값 가져옴(DB저장 위함) -->
	<select id="year_term" parameterType="String" resultType="Term_cdVO">
		select
			year,
			term
		from
			term_cd
		where
			use_yn=1
	</select>
	
	
	
</mapper>

